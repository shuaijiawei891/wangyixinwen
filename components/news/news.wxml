<!--components/news/news.wxml-->
<view class="new_item"  bindtap="cilckxiangqing" data-url="{{obj.url}}">
  <view class="title_warp">
     <view class="title">{{obj.title}}</view>
     <view class="info_warp">
      <text class="time">{{obj.ptime}}</text>
      <text class="flow">{{obj.replyCount}}播放</text>
      <text class="soucang" catchtap="shoucang" data-obj="{{obj}}">收藏</text>
     </view>
  </view>
   <view class="image_warp"> 
    <image mode="widthFix" src="{{obj.imgsrc}}"></image>
   </view>
</view>
